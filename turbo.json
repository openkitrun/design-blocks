{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["tsconfig.json", "package.json", "src/**"],
      "outputs": ["build/**"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "lint:fix": {
      "outputs": [],
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "format": {
      "outputs": [],
      "inputs": ["**/*.{js,ts,tsx}"]
    },
    "clean": {
      "cache": false
    }
  }
}
