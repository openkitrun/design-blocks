{
	"name": "@design-blocks/unstyled",
	"description": "A library 'unstyled' UI components and low-level hooks.",
	"version": "1.0.0-beta.51",
	"type": "module",
	"sideEffects": false,
	"files": [
		"lib"
	],
	"main": "./lib/module/index.js",
	"types": "./lib/typescript/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./lib/typescript/index.d.ts",
			"default": "./lib/module/index.js"
		}
	},
	"repository": {
		"type": "git",
		"repository": "git@github.com:openkitrun/design-blocks.git",
		"directory": "@blocks-unstyled"
	},
	"keywords": [
		"react-native",
		"react",
		"react-native-components",
		"design-blocks",
		"unstyled",
		"a11y"
	],
	"scripts": {
		"build": "pnpm run build:native",
		"build:native": "bob build",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"format": "biome format --write"
	},
	"devDependencies": {
		"@types/react": "^19",
		"react": "^19",
		"react-native": "0.79.5",
		"react-native-builder-bob": "0.40.13",
		"tsconfig": "workspace:*",
		"typescript": "^5"
	},
	"peerDependencies": {
		"react": ">=19",
		"react-native": ">=0.79"
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"exclude": "**/*.test.tsx",
		"targets": [
			"module",
			[
				"typescript",
				{
					"project": "tsconfig.build.json"
				}
			]
		]
	}
}
