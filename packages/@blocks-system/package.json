{
  "name": "@design-blocks/system",
  "version": "1.0.0-beta.22",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "types": "dist/typescript/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/typescript/index.d.ts",
      "import": "./dist/module/index.js",
      "require": "./dist/commonjs/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:design-blocks/design-blocks.git",
    "directory": "@blocks-system"
  },
  "scripts": {
    "build": "pnpm clean:build && pnpm build:native",
    "build:native": "bob build",
    "clean": "pnpm clean:build && rimraf -rf .turbo",
    "clean:build": "rimraf -rf dist",
    "lint": "../../node_modules/.bin/biome check src",
    "lint:fix": "../../node_modules/.bin/biome check --apply-unsafe src",
    "bundlesize": "bundlesize"
  },
  "keywords": [],
  "bundlesize": [
    {
      "path": "./dist/commonjs/index.js",
      "maxSize": "0.5kB"
    },
    {
      "path": "./dist/module/index.js",
      "maxSize": "0.5kB"
    },
    {
      "path": "./dist/typescript/index.d.ts",
      "maxSize": "0.5kB"
    }
  ],
  "dependencies": {
    "@design-blocks/block": "workspace:*",
    "@design-blocks/theme": "workspace:*",
    "@design-blocks/types": "workspace:*",
    "@design-blocks/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "18.0.28",
    "bundlesize": "0.18.1",
    "react": "^18",
    "react-native": "0.72",
    "react-native-builder-bob": "0.23.1",
    "rimraf": "4.1.2",
    "tsconfig": "workspace:*",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.71"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
